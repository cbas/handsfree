{
  "name": "handsfree",
  "version": "1.0.0",
  "description": "Voice control for web apps.",
  "main": "dist/app.js",
  "scripts": {
    "start": "npm run build && http-server dist -o",
    "test": "npm run lint && npm run test-js",
    "test-js": "mocha",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "standard",
    "lint-css": "postcss --config postcss.json",
    "build": "npm run clean && npm run build-css && npm run build-html && npm run build-js",
    "build-css": "cssnext css/app.css dist/app.css",
    "build-html": "jade --out dist html/index.jade",
    "build-js": "browserify js/app.js --transform babelify --outfile dist/app.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbas/handsfree.git"
  },
  "keywords": [
    "voice",
    "speech"
  ],
  "author": "Sebastiaan Deckers <seb@ninja.sg>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cbas/handsfree/issues"
  },
  "homepage": "https://github.com/cbas/handsfree#readme",
  "dependencies": {
    "babelify": "^6.1.3",
    "browserify": "^11.0.0",
    "cssnext": "^1.8.1",
    "http-server": "^0.8.0",
    "jade": "^1.11.0"
  },
  "devDependencies": {
    "babel": "^5.6.23",
    "babel-eslint": "^3.1.23",
    "chai": "^3.1.0",
    "mocha": "^2.2.5",
    "postcss-cli": "^1.4.0",
    "postcss-reporter": "^0.3.1",
    "rimraf": "^2.4.1",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "standard": "^4.5.4",
    "stylelint": "^0.1.2"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
